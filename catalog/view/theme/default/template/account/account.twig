    $(document).ready(function(){
        $("input[name=operator_type]").click(function(){
            var operator_type = $(this).val();
            var op1 = $(".operator_type1");
            var op2 = $(".operator_type2");
            var op3 = $(".operator_type3");
            var cls = 'bg-skyblue';

            if(operator_type==1){
                op1.addClass(cls);
                op2.removeClass(cls);
                op3.removeClass(cls);
            }
            else if(operator_type==2){
                op1.removeClass(cls);
                op2.addClass(cls);
                op3.removeClass(cls);
            }
            else if(operator_type==3){
                op1.removeClass(cls);
                op2.removeClass(cls);
                op3.addClass(cls);
            }
        });

        $(".checkbox-emp").click(function(){
            
            $(".checkbox-emp").each(function(){
                $(this).removeClass('checkbox-show');
            });
            $(this).addClass('checkbox-show');
            var primary_categs = $(this).find('.primary_category');
            
            var main_categ_chk = $(this).parent().find('.main_category');

            if(main_categ_chk.prop('checked')==false){
                main_categ_chk.prop('checked',true);
            }
        });
      
      

     $("._categories").on("click","._categs",function(){
     
        $('._categs').not(this).popover('hide');
        $("._categ_err").html("");
       var primary_categ = $(this).parent().find('.primary_category');
       var main_categ = $(this).parent().find('.main_category'); 

       var total_categ = $("input[name='main_category[]']:checked").length;
         
        if(primary_categ.prop('checked')==true || main_categ.prop('checked')==true){
            $(this).parent().find('.checkbox-emp').removeClass('checkbox-show');
            primary_categ.prop('checked',false);
            main_categ.prop('checked',false);
            $("._categ_err").html("");
            $(this).removeClass('categ_active');
            $('.popover').popover('hide');
        }
        else{

            var primary_categ_chk = $("input[name=primary_categ]:checked").val();
            if(primary_categ_chk==undefined){
                $(this).parent().find('.checkbox-emp').addClass('checkbox-show');
                primary_categ.prop('checked',true);
            }
            main_categ.prop('checked',true);
            $(this).addClass('categ_active');

            if(total_categ >= 3){     
                $('._categs').not(this).popover('hide');
                $('.popover').popover('hide');
                $(this).parent().find('.checkbox-emp').removeClass('checkbox-show');
                primary_categ.prop('checked',false);
                main_categ.prop('checked',false);
                $("._categ_err").html("Only 3 category allowed");
                $(this).removeClass('categ_active');
                return false;
            }

        }
     });   

